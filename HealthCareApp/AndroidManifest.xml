<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.v.mypersonaltrainer"
   android:installLocation="preferExternal" 
          android:versionName="0.5.13" 
          android:versionCode="32" >

    <uses-sdk android:minSdkVersion="9" />
  <supports-screens android:xlargeScreens="true"
                    android:largeScreens="true"
                    android:normalScreens="true"
                    android:smallScreens="true" />
  
  <uses-feature android:name="android.hardware.camera.autofocus" android:required="true" />
  <uses-feature android:name="android.hardware.camera.flash" android:required="true" />
  <uses-feature android:name="android.hardware.camera.zoom" android:required="true" />
  <uses-feature android:name="android.hardware.camera"/>
  <uses-feature android:name="android.hardware.screen.landscape"/>
  <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.v.mypersonaltrainer.Splashscreen"
            android:label="@string/app_name" >
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>   
            </activity>
            <activity
            android:name="com.v.mypersonaltrainer.chart.MainActivity"
            android:label="@string/app_name" >
            </activity>
        <activity
            android:name="com.v.mypersonaltrainer.MainActivity"
            android:label="@string/title_activity_main" >
                        			                           
        </activity>
         <activity
            android:name="com.v.mypersonaltrainer.SettinActivity"
            android:label="@string/title_activity_main" >
                        			                           
        </activity>
        <activity
            android:name="com.v.mypersonaltrainer.GoalActivity"
            android:label="@string/title_activity_goal" >
        </activity>
        <activity
            android:name="com.v.mypersonaltrainer.ExerciseActivity"
            android:label="@string/title_activity_exercise" >
        </activity>
        <activity
            android:name="com.v.mypersonaltrainer.MealActivity"
            android:label="@string/title_activity_meal" >
        </activity>
        <activity
            android:name="com.v.mypersonaltrainer.MealActivity2"
            android:label="@string/title_activity_meal" >
        </activity>
        <activity
            android:name="com.v.mypersonaltrainer.Bmi"
            android:label="@string/title_activity_bmi" >
        </activity>
        <activity
            android:name="com.v.mypersonaltrainer.MealAddActivity"
            android:label="@string/title_activity_mealAdd" >
        </activity>
         <activity android:name="edu.sfsu.cs.orange.ocr.CaptureActivity"
              android:screenOrientation="landscape"
              android:configChanges="orientation|keyboardHidden|screenSize"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
              android:windowSoftInputMode="stateAlwaysHidden"              
              >
      </activity>
      <activity
            android:name="com.v.mypersonaltrainer.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name="com.v.mypersonaltrainer.ChartActivity"
            android:label="@string/title_activity_chart" >
        </activity>
    <activity android:name="edu.sfsu.cs.orange.ocr.HelpActivity"
              android:screenOrientation="user">
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
            
    <activity android:name="org.achartengine.GraphicalActivity" />
    <activity android:name="edu.sfsu.cs.orange.ocr.PreferencesActivity" />        
        
    </application>
 <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>